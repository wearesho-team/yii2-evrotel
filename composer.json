{
  "name": "wearesho-team/yii2-evrotel",
  "description": "Yii2 Evrotel Integration",
  "type": "library",
  "require-dev": {
    "brainmaestro/composer-git-hooks": "^2.6",
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "^3.3",
    "vlucas/phpdotenv": "^2.5",
    "yiisoft/yii2-phpunit": "dev-master"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2",
    "horat1us/yii2-base": "^1.14",
    "nesbot/carbon": "^1.27",
    "wearesho-team/evrotel": "^2.0",
    "wearesho-team/yii2-filesystem": "^4.2",
    "yiisoft/yii2": "^2.0.15",
    "yiisoft/yii2-queue": "^2.1"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:Horat1us/yii2-phpunit.git"
    }
  ],
  "config": {
    "process-timeout": 1800,
    "sort-packages": true,
    "platform": {
      "php": "7.2"
    }
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "./vendor/bin/phpcbf --standard=PSR2 ./src ./tests",
    "cover": "./vendor/bin/phpunit --coverage-clover=coverage.xml",
    "test": "./vendor/bin/phpunit",
    "post-install-cmd": "vendor/bin/cghooks add --ignore-lock",
    "post-update-cmd": "vendor/bin/cghooks update"
  },
  "autoload": {
    "psr-4": {
      "Wearesho\\Evrotel\\Yii\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Evrotel\\Yii\\Tests\\": "tests/"
    }
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer lint",
        "composer test"
      ],
      "post-merge": "composer update --lock"
    }
  }
}
